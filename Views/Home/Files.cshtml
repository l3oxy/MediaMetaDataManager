@model DirectoryModel;
@using System.IO;
@using MediaMetaDataManager.MetaData;
@{
    ViewData["Title"] = "Files";
}

<div class="text-center">
    Current Directory: [<code><a asp-action="Directory">@Model?.CurrentDirectory?.FullName</a></code>]
    @{
        if (Model is null)
        {
            return;
        }

        var symbolYes = '✅';
        var symbolNo = '❌';
        var symbolUnknown = '❔';

        //Microsoft.Extensions.Primitives.StringValues ids; // not using this so commenting it out. Forgot what it was going to be for.
        var files = Model.CurrentDirectory.EnumerateFiles();
        if (files is not null && (files.Count() >= 1))
        {
            bool metaDataProgramOnline = MetaDataProgram.MetaDataProgramCheck();
            {
                <div>Quantity of files: @files.Count()</div>
                <table class="table table-dark table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Filename</th>
                            <th scope="col"><abbr title="Title">T</abbr></th>
                            <th scope="col"><abbr title="Author">A</abbr></th>
                            <th scope="col"><abbr title="Comment">C</abbr></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (FileInfo file in files)
                            {
                                <tr>
                                    <td><code><a asp-action="File" asp-route-id=@file.Name>@file.Name</a></code></td>
                                    @if (metaDataProgramOnline) {
                                        var metaDataProgramOutput = MetaDataProgram.GetInfo(new FileInfo(file.FullName));
                                        
                                        @if (metaDataProgramOutput.Frames.ContainsKey("TIT2")){<td>@symbolYes</td>}else{<td>@symbolNo</td>}
                                        @if (metaDataProgramOutput.Frames.ContainsKey("TPE1")){<td>@symbolYes</td>}else{<td>@symbolNo</td>}
                                        @if (metaDataProgramOutput.Frames.ContainsKey("COMM")){<td>@symbolYes</td>}else{<td>@symbolNo</td>}
                                    } else {
                                        <td>@symbolUnknown</td>
                                        <td>@symbolUnknown</td>
                                        <td>@symbolUnknown</td>
                                    }
                                </tr>
                            }
                    </tbody>
                </table>
            }
        }
    }
</div>
